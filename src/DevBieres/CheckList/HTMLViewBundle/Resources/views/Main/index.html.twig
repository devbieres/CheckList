{% extends 'DevBieresCheckListHTMLViewBundle::layout.html.twig' %}

{% block body %}
<div class="row">
   <div class="col-md-12" >
         <div class="row" >
               <div class="col-md-6" >
                    <h2> 
                         {{ 'main.definition.title'|trans }}
                         <div class="pull-right" >
                                <a class="btn btn-primary" id="open" >
                                     {{ 'plus'|ico }}
                                </a>
                         </div>
                    </h2>
                    {{ include('DevBieresCheckListHTMLViewBundle:Skeleton:form.html.twig', { 'form' : form }) }}
                    {{ include('DevBieresCheckListHTMLViewBundle:Skeleton:table.html.twig', { 'list' : skeletons }) }}
               </div> {# list definitions #}
               <div class="col-md-6" >
                    <h2> {{ 'main.checklist.title'|trans }} </h2>
                    {{ include('DevBieresCheckListHTMLViewBundle:CheckList:table.html.twig', { 'list' : checklists }) }}
               </div> {# running check-list #}
         </div>
   </div> {# La zone centrale #}
</div>

{% endblock %}

{% block js %}
     {{ parent() }}
     <script src="{{ asset('./bundles/devbiereschecklisthtmlview/js/lib/bootbox/bootbox.min.js') }} " ></script>
     <script src="{{ asset('./bundles/devbiereschecklisthtmlview/js/skeleton.js') }}" ></script>
{% endblock %}
